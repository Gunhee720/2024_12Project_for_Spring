{{>layouts/header}}

<!-- Form Section -->
<section class="form-container">
    <h2 class="form-title">Fill Out the Form</h2>
    <form action="/article/create" method="POST" class="container">
        <div class="form-group">
            <label for="text-input">Your Name</label>
            <input type="text" id="text-input" name="title" placeholder="Enter your name" required>
        </div>

        <div class="form-group">
            <label for="textarea-input">Your Message</label>
            <textarea id="textarea-input" name="content" placeholder="Write your message" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn-submit">Submit</button>
    </form>
</section>


