{{>layouts/header}}

<!--    //bootstrap 에서 table 검색-->
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">title</th>
        <th scope="col">content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>

    <a href="/articles/{{id}}/edit" class="btn btn-primary">Edit</a>
    <a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a>
    <a href="/articles">go to articles_list</a>
    {{/article}}
    </tbody>
</table>
{{>layouts/footer}}
